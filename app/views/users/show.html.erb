<div class="show-users">
	<div class="show-user">
		<div class="user-avatar">
			<% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, class: 'show-avatar' %>
            <% end %>
		</div>
		<div class="user-show-details">
			<div><%= @user.username %></div>
			<div><%= @user.name %></div>
			<div><%= @user.email %></div>
			<div><%= @user.website %></div>
			<div><%= @user.bio %></div>
			<div><%=link_to "Edit", edit_user_path, class: "btn-edit" if current_user == @user %></div>
		</div>
	</div>
	<div class="row row-cols-1 row-cols-md-3 g-4">
		<% @posts.each do |post| %>
			<div class="col">
			  <div class="card show-user-post">
			  	<%= post.title %>
			  	<%= image_tag post.image, class: "user-img" %>
			  	<% if current_user == post.user  %>
			      <div class="user-show-delete-div">
			        <%= link_to "Edit", edit_post_path(post), class: "user-show-delete" %>
			        <%= time_ago_in_words(post.created_at) %> ago
			      	<%= link_to "Delete", post, data: {turbo_method: :delete}, class: "user-show-delete" %>
			      </div>
			  	<% end %>
			  </div>
			</div>
		<% end %>
	</div>
</div>
